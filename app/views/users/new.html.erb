
  <header class="page-header">
    <h2>Sign up for Jungle!</h2>
  </header>

<div class="col-md-5">
  <%= form_for :user, url: '/users' do |form| %>
  <div class="form-group">
    <i class="fa fa-user" aria-hidden="true"></i> First Name:
      <%= form.text_field :first_name, class: 'form-control' %>
  </div>
  <div class="form-group">
  <i class="fa fa-user" aria-hidden="true"></i> Last Name:
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>
  <div class="form-group">
  <i class="fa fa-envelope" aria-hidden="true"></i> Email:
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <i class="fa fa-key" aria-hidden="true"></i> Password: 
      <%= form.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <i class="fa fa-key" aria-hidden="true"></i> Confirm Password:
      <%= form.password_field :password_confirmation, class: 'form-control' %>
  </div>

<%= form.submit "Submit", class: 'btn btn-primary' %>
  <% end %>
</div>